@page "/catalog"
@attribute [Authorize]
@rendermode InteractiveServer
@inject GameAdminService AdminService
@using GameService.ServiceDefaults.DTOs

<PageTitle>Game Catalog</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Game Catalog</h1>
    <button class="btn btn-outline-primary" @onclick="LoadGames">
        <i class="bi bi-arrow-clockwise"></i> Refresh
    </button>
</div>

@if (games == null)
{
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
}
else if (games.Count == 0)
{
    <div class="alert alert-info">
        No games supported by this server.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var game in games)
        {
            <div class="col">
                <div class="card h-100 shadow-sm text-center">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                        <div class="display-1 text-secondary mb-3">
                            <i class="bi bi-joystick"></i>
                        </div>
                        <h5 class="card-title">@game.Name</h5>
                        <p class="card-text text-muted small">Supported</p>
                    </div>
                    <div class="card-footer">
                        <span class="badge bg-success">Ready to Play</span>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<SupportedGameDto>? games;

    protected override async Task OnInitializedAsync()
    {
        await LoadGames();
    }

    private async Task LoadGames()
    {
        games = await AdminService.GetSupportedGamesAsync();
    }
}