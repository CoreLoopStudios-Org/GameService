@page "/"

@attribute [Authorize]
@rendermode InteractiveServer
@using GameService.ServiceDefaults.DTOs
@implements IDisposable

@inject GameAdminService AdminService
@inject AuthenticationStateProvider AuthStateProvider
@inject PlayerUpdateNotifier Notifier
@inject ILogger<Home> Logger
@inject ToastService Toast

<PageTitle>Dashboard</PageTitle>

<!-- Dashboard Header & Stats -->
<div class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 fw-bold">Dashboard</h1>
            <p class="text-muted small mb-0">System Overview & Player Management</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary rounded-pill px-3" @onclick="OpenBroadcastModal">
                <i class="bi bi-megaphone-fill me-2"></i>Broadcast
            </button>
            <span class="badge bg-success-subtle text-success border border-success-subtle px-3 py-2 rounded-pill d-flex align-items-center">
                <i class="bi bi-broadcast me-2 animate-pulse"></i> Live
            </span>
        </div>
    </div>

    @if (stats != null)
    {
        <div class="row g-3">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100 bg-primary text-white overflow-hidden position-relative">
                    <div class="card-body">
                        <div class="display-6 fw-bold">@stats.OnlinePlayers</div>
                        <div class="small opacity-75 text-uppercase fw-bold">Online Players</div>
                        <i class="bi bi-people-fill position-absolute bottom-0 end-0 mb-n2 me-n2 display-1 opacity-25"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100 bg-success text-white overflow-hidden position-relative">
                    <div class="card-body">
                        <div class="display-6 fw-bold">@stats.ActiveGames</div>
                        <div class="small opacity-75 text-uppercase fw-bold">Active Games</div>
                        <i class="bi bi-controller position-absolute bottom-0 end-0 mb-n2 me-n2 display-1 opacity-25"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100 bg-warning text-dark overflow-hidden position-relative">
                    <div class="card-body">
                        <div class="display-6 fw-bold">@FormatNumber(stats.TotalEconomyCoins)</div>
                        <div class="small opacity-75 text-uppercase fw-bold">Total Economy</div>
                        <i class="bi bi-coin position-absolute bottom-0 end-0 mb-n2 me-n2 display-1 opacity-25"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100 bg-light text-dark overflow-hidden position-relative">
                    <div class="card-body">
                        <div class="display-6 fw-bold">@stats.TotalRegisteredUsers</div>
                        <div class="small text-muted text-uppercase fw-bold">Registered Users</div>
                        <i class="bi bi-person-badge position-absolute bottom-0 end-0 mb-n2 me-n2 display-1 text-secondary opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Player List -->
<div class="card shadow-sm border-0">
    <div class="card-header bg-white py-3 border-bottom-0">
        <h5 class="mb-0 fw-bold text-secondary">Player Registry</h5>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
            <tr>
                <th class="ps-4 text-secondary text-uppercase small" style="width: 80px;">ID</th>
                <th class="text-secondary text-uppercase small">User</th>
                <th class="text-secondary text-uppercase small">Status</th>
                <th class="text-secondary text-uppercase small">Balance</th>
                <th class="text-end pe-4 text-secondary text-uppercase small">Actions</th>
            </tr>
            </thead>
            <tbody>
            @if (users == null)
            {
                <tr><td colspan="5" class="text-center py-5"><div class="spinner-border text-primary"></div></td></tr>
            }
            else
            {
                @foreach (var user in users)
                {
                    var isMe = user.UserId == currentUserId;
                    var rowClass = isMe ? "table-info" : updatedUserIds.Contains(user.UserId) ? "table-warning transition-fade" : "";

                    <tr class="@rowClass" @key="user.UserId">
                        <td class="ps-4 text-muted">#@user.ProfileId</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div
                                    class="avatar-circle bg-primary text-white me-3 d-flex align-items-center justify-content-center fw-bold"
                                    style="width: 32px; height: 32px; border-radius: 50%; font-size: 0.8rem;">
                                    @user.Username.Substring(0, 1).ToUpper()
                                </div>
                                <div>
                                    <div class="fw-medium">@user.Username @(isMe ? "(You)" : "")</div>
                                    <div class="text-muted small">@user.Email</div>
                                </div>
                            </div>
                        </td>
                        <td>
                            @if (user.IsOnline)
                            {
                                <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">
                                    <i class="bi bi-circle-fill me-1" style="font-size: 0.6em;"></i> Online
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-light text-secondary border rounded-pill">Offline</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <span class="fw-bold text-dark me-2">@user.Coins.ToString("N0")</span>
                                <span class="badge bg-secondary-subtle text-secondary rounded-pill"
                                      style="font-size: 0.7em;">COINS</span>
                            </div>
                        </td>
                        <td class="text-end pe-4">
                            <div class="btn-group">
                                <button class="btn btn-sm btn-outline-secondary border-0"
                                        title="Adjust Coins"
                                        @onclick="() => EditCoins(user)">
                                    <i class="bi bi-cash-coin fs-5"></i>
                                </button>

                                <button class="btn btn-sm btn-outline-info border-0"
                                        title="View History"
                                        @onclick="() => ViewHistory(user)">
                                    <i class="bi bi-clock-history fs-5"></i>
                                </button>

                                <div class="vr my-2 mx-1 text-secondary opacity-25"></div>

                                <button class="btn btn-sm btn-outline-danger border-0"
                                        @onclick="() => ConfirmDelete(user)"
                                        disabled="@isMe"
                                        title="@(isMe ? "Cannot delete self" : "Delete Account")">
                                    <i class="bi bi-trash fs-5"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>

<!-- Broadcast Modal -->
@if (showBroadcastModal)
{
    <div class="modal fade show d-block backdrop-blur" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow-lg border-0">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="bi bi-megaphone-fill me-2"></i>System Broadcast</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseBroadcastModal"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted small">This message will be sent to <strong>all connected players</strong> immediately.</p>
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Message" id="broadcastMsg" style="height: 100px" @bind="broadcastMessage"></textarea>
                        <label for="broadcastMsg">Message</label>
                    </div>
                </div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-light" @onclick="CloseBroadcastModal">Cancel</button>
                    <button type="button" class="btn btn-primary px-4" @onclick="SendBroadcast">
                        <i class="bi bi-send-fill me-2"></i>Send Now
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Edit Coins Modal -->
@if (editingUser != null)
{
    <div class="modal fade show d-block backdrop-blur" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow-lg border-0">
                <div class="modal-header border-bottom-0 pb-0">
                    <h5 class="modal-title">Adjust Balance</h5>
                    <button type="button" class="btn-close" @onclick="CloseEdit"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center mb-4">
                        <div class="fw-bold fs-4">@editingUser.Username</div>
                        <div class="text-muted">Current: @editingUser.Coins.ToString("N0")</div>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="number" class="form-control fs-3 fw-bold text-center" id="amountInput"
                               @bind="coinAmount"/>
                        <label for="amountInput" class="text-center w-100">Adjustment Amount (+/-)</label>
                    </div>
                </div>
                <div class="modal-footer border-top-0 pt-0">
                    <button type="button" class="btn btn-light" @onclick="CloseEdit">Cancel</button>
                    <button type="button" class="btn btn-primary px-4" @onclick="SaveCoins">Apply Transaction</button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Delete Confirmation Modal -->
@if (deletingUser != null)
{
    <div class="modal fade show d-block backdrop-blur" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow-lg border-0">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Deletion</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body p-4">
                    <p>Are you sure you want to permanently delete user <strong>@deletingUser.Username</strong>?</p>
                    <p class="mb-0 text-danger small">This action cannot be undone. All game progress and coins will be
                        lost.</p>
                </div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-light" @onclick="CancelDelete">Keep User</button>
                    <button type="button" class="btn btn-danger px-4" @onclick="ExecuteDelete">Yes, Delete</button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Transaction History Modal -->
@if (historyUser != null)
{
    <div class="modal fade show d-block backdrop-blur" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content shadow-lg border-0">
                <div class="modal-header">
                    <h5 class="modal-title">Transaction History: @historyUser.Username</h5>
                    <button type="button" class="btn-close" @onclick="() => historyUser = null"></button>
                </div>
                <div class="modal-body p-0">
                    @if (historyItems == null)
                    {
                        <div class="p-4 text-center"><div class="spinner-border text-primary"></div></div>
                    }
                    else if (!historyItems.Any())
                    {
                        <div class="p-4 text-center text-muted">No transactions found.</div>
                    }
                    else
                    {
                        <table class="table table-striped mb-0 small">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th>Time</th>
                                    <th>Type</th>
                                    <th>Desc</th>
                                    <th class="text-end">Amount</th>
                                    <th class="text-end">Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var tx in historyItems)
                                {
                                    <tr>
                                        <td>@tx.CreatedAt.ToLocalTime().ToString("g")</td>
                                        <td>@tx.TransactionType</td>
                                        <td class="text-truncate" style="max-width: 150px;" title="@tx.Description">@tx.Description</td>
                                        <td class="text-end fw-bold @(tx.Amount > 0 ? "text-success" : "text-danger")">
                                            @tx.Amount.ToString("+0;-#")
                                        </td>
                                        <td class="text-end text-muted">@tx.BalanceAfter.ToString("N0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
}

<style>
    .backdrop-blur {
        background-color: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(2px);
    }

    .transition-fade {
        transition: background-color 1s ease-out;
    }
    
    .animate-pulse {
        animation: pulse 2s infinite;
    }
    
    @@keyframes pulse {
        0% { opacity: 1; }
        50% { opacity: 0.5; }
        100% { opacity: 1; }
    }
</style>

@code {
    private List<AdminPlayerDto>? users;
    private DashboardStatsDto? stats;
    private string? currentUserId;
    private readonly HashSet<string> updatedUserIds = new();

    private AdminPlayerDto? editingUser;
    private AdminPlayerDto? deletingUser;
    private AdminPlayerDto? historyUser;
    private List<WalletTransactionDto>? historyItems;
    private long coinAmount;
    private bool _isDisposed;
    
    private bool showBroadcastModal;
    private string broadcastMessage = "";

    [Inject] NavigationManager Nav { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        currentUserId = authState.User.FindFirstValue(ClaimTypes.NameIdentifier);

        await LoadData();
        Notifier.OnPlayerUpdated += HandleUpdate;
    }

    private async Task LoadData()
    {
        var statsTask = AdminService.GetDashboardStatsAsync();
        var usersTask = AdminService.GetPlayersAsync();
        
        await Task.WhenAll(statsTask, usersTask);
        
        stats = statsTask.Result;
        users = usersTask.Result;
    }

    private void HandleUpdate(PlayerUpdatedMessage msg)
    {
        if (_isDisposed) return;

        InvokeAsync(() =>
        {
            if (users is null) return;

            var userIndex = users.FindIndex(u => u.UserId == msg.UserId);

            if (msg.ChangeType == PlayerChangeType.Deleted)
            {
                if (userIndex != -1)
                {
                    users.RemoveAt(userIndex);
                    StateHasChanged();
                }
                return;
            }

            if (userIndex != -1)
            {
                var existing = users[userIndex];
                users[userIndex] = existing with { Coins = msg.NewCoins };
            }
            else if (!string.IsNullOrEmpty(msg.Username))
            {
                users.Insert(0, new AdminPlayerDto(
                    msg.ProfileId,
                    msg.UserId,
                    msg.Username,
                    msg.Email ?? "Unknown",
                    msg.NewCoins,
                    true
                ));
            }

            updatedUserIds.Add(msg.UserId);
            StateHasChanged();

            _ = Task.Delay(1000).ContinueWith(_ =>
            {
                if (_isDisposed) return;
                InvokeAsync(() =>
                {
                    updatedUserIds.Remove(msg.UserId);
                    StateHasChanged();
                });
            });
        });
    }

    private void OpenBroadcastModal()
    {
        broadcastMessage = "";
        showBroadcastModal = true;
    }

    private void CloseBroadcastModal()
    {
        showBroadcastModal = false;
    }

    private async Task SendBroadcast()
    {
        if (string.IsNullOrWhiteSpace(broadcastMessage)) return;
        
        try 
        {
            await AdminService.SendBroadcastAsync(broadcastMessage);
            Toast.ShowSuccess("Message sent to all players", "Broadcast Sent");
            CloseBroadcastModal();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to send broadcast");
            Toast.ShowError("Failed to send message");
        }
    }

    private void EditCoins(AdminPlayerDto user)
    {
        editingUser = user;
        coinAmount = 0;
    }

    private void CloseEdit()
    {
        editingUser = null;
    }

    private async Task SaveCoins()
    {
        if (editingUser == null || coinAmount == 0) return;
        try
        {
            await AdminService.UpdatePlayerCoinsAsync(editingUser.UserId, coinAmount);
            Toast.ShowSuccess($"Adjusted balance for {editingUser.Username}");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error updating coins");
            Toast.ShowError("Failed to update coins");
        }

        CloseEdit();
    }

    private void ConfirmDelete(AdminPlayerDto user)
    {
        deletingUser = user;
    }

    private void CancelDelete()
    {
        deletingUser = null;
    }

    private async Task ExecuteDelete()
    {
        if (deletingUser == null) return;
        try
        {
            await AdminService.DeletePlayerAsync(deletingUser.UserId);
            Toast.ShowSuccess($"Deleted user {deletingUser.Username}");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting user");
            Toast.ShowError("Failed to delete user");
        }
        finally
        {
            deletingUser = null;
        }
    }

    private async Task ViewHistory(AdminPlayerDto user)
    {
        historyUser = user;
        historyItems = null;
        StateHasChanged();
        var result = await AdminService.GetPlayerHistoryAsync(user.UserId, 1);
        historyItems = result?.Items.ToList() ?? new();
        StateHasChanged();
    }

    private string FormatNumber(long num)
    {
        if (num >= 1_000_000) return (num / 1_000_000D).ToString("0.##") + "M";
        if (num >= 1_000) return (num / 1_000D).ToString("0.##") + "k";
        return num.ToString("N0");
    }

    public void Dispose()
    {
        _isDisposed = true;
        Notifier.OnPlayerUpdated -= HandleUpdate;
    }
}