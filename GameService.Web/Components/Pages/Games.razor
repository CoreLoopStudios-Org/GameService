@page "/games"
@attribute [Authorize]
@rendermode InteractiveServer
@inject GameAdminService AdminService
@inject NavigationManager Nav
@using GameService.GameCore

<PageTitle>Active Games</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Active Games</h1>
    <div class="d-flex gap-2">
        <button class="btn btn-success" @onclick="CreateGame">
            <i class="bi bi-plus-lg"></i> Create 4-Player Room
        </button>
        <button class="btn btn-outline-primary" @onclick="LoadGames">
            Refresh
        </button>
    </div>
</div>

@if (games == null)
{
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
}
else if (games.Count == 0)
{
    <div class="alert alert-info">
        No active games found.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var game in games)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="badge bg-secondary">@game.RoomId</span>
                        <span class="badge @(game.IsPublic ? "bg-success" : "bg-warning")">
                            @(game.IsPublic ? "Public" : "Private")
                        </span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@game.GameType</h5>
                        <p>Players: @game.PlayerCount</p>
                        <ul class="list-group list-group-flush mb-3">
                            @foreach (var player in game.PlayerSeats)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="text-truncate" style="max-width: 150px;">@player.Key</span>
                                    <span class="badge bg-light text-dark">Seat @player.Value</span>
                                </li>
                            }
                        </ul>
                        <div class="d-grid gap-2">
                            <a href="games/@game.RoomId" class="btn btn-primary">
                                <i class="bi bi-eye"></i> Inspect
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<GameRoomDto>? games;

    protected override async Task OnInitializedAsync()
    {
        await LoadGames();
    }

    private async Task LoadGames()
    {
        games = await AdminService.GetActiveGamesAsync();
    }

    private async Task CreateGame()
    {
        // FIX: Use the injected service instead of creating a raw HttpClient
        try 
        {
            await AdminService.CreateGameAsync(4);
            await LoadGames(); // Refresh list after creation
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error creating game: {ex.Message}");
        }
    }
    
    [Inject] IJSRuntime JSRuntime { get; set; } = default!;
}